%h1 New incident

= form_for @incident do |f|
  - if @incident.errors.any?
    #error_explanation
      %h2= "#{pluralize(@incident.errors.count, "error")} prohibited this incident from being saved:"
      %ul
        - @incident.errors.full_messages.each do |msg|
          %li= msg
  .form-group.row
    = f.text_field :title, class: 'form-control form-control-lg', placeholder: 'Title'
  .form-group.row
    .col-sm-2
      = f.submit 'Open', class: 'form-control btn-primary btn'

= link_to 'Back', incidents_path
