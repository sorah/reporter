= form_for @incident_type do |f|
  - if @incident_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@incident_type.errors.count, "error")} prohibited this incident_type from being saved:"
      %ul
        - @incident_type.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label :name, class: 'form-control-label col-sm-2'
    .col-sm-10
      = f.text_field :name, class: 'form-control'

  .form-group.row
    = f.label :description, class: 'form-control-label col-sm-2'
    .col-sm-10
      = f.text_area :description, class: 'form-control'

  .form-group.row
    = f.label :meta, class: 'form-control-label col-sm-2'
    .col-sm-10
      = f.text_area :meta, value: (@incident_type.meta || {}).to_yaml, class: 'form-control'

  .form-group.row
    .col-sm-2
      = f.submit 'Save', class: 'btn btn-primary form-control'
